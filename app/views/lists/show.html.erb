<h1>My List</h1>
 <%= link_to "delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
<h2><%= @list.name %></h2>
<div class="container">
  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="col-md-4 mb-4">
          <div class="card p-3 d-flex justify-content-center">
            <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
              <%= image_tag movie.poster_url, alt: movie.title, class:"image_bookmark" %>
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text"><%= movie.overview %></p>
              </div>
            </div>
          </div>
          <% end %>
      </div>
  </div>
</div>
